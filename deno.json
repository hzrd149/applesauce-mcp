{
  "tasks": {
    "dev": "npx @modelcontextprotocol/inspector deno task start",
    "ingest": "deno run --allow-read --allow-write --allow-net --allow-sys --allow-ffi --allow-env scripts/ingest.ts",
    "start": "deno run --allow-read --allow-write --allow-net --allow-env --allow-sys --allow-ffi src/cli.ts",
    "start:http": "deno run --allow-read --allow-write --allow-net --allow-env --allow-sys --allow-ffi src/cli.ts --http",
    "check": "deno check src/cli.ts",
    "submodule:init": "git submodule update --init --recursive",
    "submodule:update": "git submodule update --remote --merge",
    "submodule:sync": "git submodule sync"
  },
  "imports": {
    "@cliffy/ansi": "jsr:@cliffy/ansi@^1.0.0-rc.8",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
    "@cliffy/flags": "jsr:@cliffy/flags@^1.0.0-rc.8",
    "@lancedb/lancedb": "npm:@lancedb/lancedb@^0.22.3",
    "@std/assert": "jsr:@std/assert@1",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.25.3",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@std/front-matter": "jsr:@std/front-matter@^1.0.9",
    "@std/fs": "jsr:@std/fs@^1.0.22",
    "@std/path": "jsr:@std/path@^1.1.4",
    "apache-arrow": "npm:apache-arrow@^17.0.0",
    "hono": "npm:hono@^4.11.7",
    "ollama": "npm:ollama@^0.6.3",
    "zod": "npm:zod@^3.25.1"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "deno.unstable", "dom"],
    "strict": true
  },
  "exclude": [
    "reference/"
  ],
  "fmt": {
    "exclude": [
      "reference/"
    ]
  }
}
