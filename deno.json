{
  "name": "@applesauce/mcp",
  "version": "0.5.0",
  "license": "MIT",
  "exports": "./mod.ts",
  "tasks": {
    "dev": "npx -y @modelcontextprotocol/inspector@0.20 deno task cli",
    "dev-http": "deno run --env-file -P --watch src/cli.ts --mode http",
    "cli": "deno run --env-file -P src/cli.ts",
    "check": "deno check src/cli.ts"
  },
  "imports": {
    "@cliffy/ansi": "jsr:@cliffy/ansi@^1.0.0-rc.8",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
    "@cliffy/flags": "jsr:@cliffy/flags@^1.0.0-rc.8",
    "@huggingface/transformers": "npm:@huggingface/transformers@^3.8.1",
    "@lancedb/lancedb": "npm:@lancedb/lancedb@^0.22.3",
    "@langchain/classic": "npm:@langchain/classic@^1.0.11",
    "@langchain/community": "npm:@langchain/community@^1.1.8",
    "@langchain/core": "npm:@langchain/core@^1.1.17",
    "@langchain/ollama": "npm:@langchain/ollama@^1.2.1",
    "@langchain/openai": "npm:@langchain/openai@^1.2.3",
    "@langchain/textsplitters": "npm:@langchain/textsplitters@^1.0.1",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.25.3",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@std/front-matter": "jsr:@std/front-matter@^1.0.9",
    "@std/fs": "jsr:@std/fs@^1.0.22",
    "@std/path": "jsr:@std/path@^1.1.4",
    "@std/yaml": "jsr:@std/yaml@^1.0.11",
    "apache-arrow": "npm:apache-arrow@^17.0.0",
    "hono": "npm:hono@^4.11.7",
    "langchain": "npm:langchain@^1.2.14",
    "ollama": "npm:ollama@^0.6.3",
    "typescript": "npm:typescript@^5.9.3",
    "zod": "npm:zod@^3.25.1"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "deno.unstable", "dom"],
    "strict": true
  },
  "exclude": [
    "data",
    ".vscode",
    ".github"
  ],
  "permissions": {
    "default": {
      "sys": true,
      "env": true,
      "read": true,
      "ffi": true,
      "net": true,
      "run": true
    }
  }
}
